# Task Management API Configuration
# Copy this file to .env and update with your actual values
# NEVER commit the actual .env file to git!

# ==================================================
# APPLICATION SETTINGS
# ==================================================
APP_NAME=Task Management API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# ==================================================
# SECURITY SETTINGS
# ==================================================
# Generate a strong secret key for cryptographic operations
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# ==================================================
# CORS CONFIGURATION
# ==================================================
# Comma-separated list of allowed origins
# Development example: http://localhost:3000,http://localhost:8080
# Production example: https://yourdomain.com,https://api.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==================================================
# SECURITY HEADERS
# ==================================================
SECURITY_HEADERS_ENABLED=true

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
# PostgreSQL connection string (async)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_USER=taskuser
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=taskdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==================================================
# SERVER CONFIGURATION
# ==================================================
HOST=0.0.0.0
PORT=8000

# ==================================================
# LOGGING CONFIGURATION
# ==================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==================================================
# ENVIRONMENT-SPECIFIC NOTES
# ==================================================
# Development:
#   - DEBUG=true (for detailed error messages)
#   - Allow localhost CORS origins
#   - Lower rate limits for testing
#
# Staging:
#   - DEBUG=false
#   - Use staging domain in CORS_ORIGINS
#   - Moderate rate limits
#
# Production:
#   - DEBUG=false (CRITICAL!)
#   - ENVIRONMENT=production
#   - Strong SECRET_KEY (32+ characters)
#   - Strict CORS_ORIGINS (no localhost)
#   - Production database credentials
#   - Higher rate limits
#   - Enable all security features